generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
 
model Tipo_Usuario {
  id          Int       @id @default(autoincrement())
  descripcion String?
  usuarios    Usuario[]
}
 
model Usuario {
  id          Int      @id @default(autoincrement())
  email          String        @unique
  password       String
  nombre         String?
  apellido       String?
  direccion      String?
  saldo          Float         @default(0)
  tipoUsuario    Tipo_Usuario? @relation(fields: [tipoUsuarioId], references: [id])
  tipoUsuarioId  Int?           @default(1)
  perfilUrl       String?      @db.LongText
  fondoPerfilUrl  String?      @db.LongText
  reviews        Review[]
  usuario_juegos Usuario_Juego[]
  wishlists      Wishlist[]
  carritos       Carrito[]
}
 
model Review {
  id          Int      @id @default(autoincrement())
  descripcion String?  @db.Text
  usuario     Usuario? @relation(fields: [usuarioId], references: [id])
  usuarioId   Int?
  juego       Juego?   @relation(fields: [juegoId], references: [id])
  juegoId     Int?
}
 
model Usuario_Juego {
  id        Int       @id @default(autoincrement())
  detalle   String?
  fecha     DateTime  @default(now())
  usuario   Usuario?  @relation(fields: [usuarioId], references: [id])
  usuarioId Int?
  juego     Juego?    @relation(fields: [juegoId], references: [id])
  juegoId   Int? 
}
 
model Wishlist {
  id        Int      @id @default(autoincrement())
  usuario   Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId Int
  juego     Juego    @relation(fields: [juegoId], references: [id])
  juegoId   Int

  @@unique([usuarioId, juegoId])
}

 
model Carrito {
  id        Int       @id @default(autoincrement())
  usuario   Usuario?  @relation(fields: [usuarioId], references: [id])
  usuarioId Int?      @unique
  juegos    Carrito_Juego[]
}
 
model Carrito_Juego {
  id         Int       @id @default(autoincrement())
  carrito    Carrito?  @relation(fields: [carritoId], references: [id])
  carritoId  Int?
  juego      Juego?    @relation(fields: [juegoId], references: [id])
  juegoId    Int?
}
 
