model Genero {
  id             Int     @id @default(autoincrement())
  nombre         String?
  juego_generos  Juego_Genero[]
}
 
model Juego_Genero {
  id        Int      @id @default(autoincrement())
  detalle   String?
  juego     Juego?   @relation(fields: [juegoId], references: [id])
  juegoId   Int?
  genero    Genero?  @relation(fields: [generoId], references: [id])
  generoId  Int?
}
 
model Juego_Plataforma {
  id            Int          @id @default(autoincrement())
  juego         Juego?       @relation(fields: [juegoId], references: [id])
  juegoId       Int?
  plataforma    Plataforma?  @relation(fields: [plataformaId], references: [id])
  plataformaId  Int?
}
 
model Plataforma {
  id      Int               @id @default(autoincrement())
  nombre  String?
  juegos  Juego_Plataforma[]
}
 
model Imagen {
  id        Int      @id @default(autoincrement())
  url       String?
  alt       String?
  orden     Int      @default(0)
  isMain    Boolean  @default(false)
 
  juego     Juego?   @relation(fields: [juegoId], references: [id])
  juegoId   Int?
 
  mainJuego Juego?   @relation("MainImagen")
}

model Oferta {
  id         Int      @id @default(autoincrement())
  juego      Juego    @relation(fields: [juegoId], references: [id])
  juegoId    Int
  descuento  Float    
  fechaInicio DateTime
  fechaFin    DateTime
}